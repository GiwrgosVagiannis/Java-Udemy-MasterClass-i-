      //LAST CHALLENGE 
      
      
      public static void main(String[] args) {

       double firstVariable=20.00d;
       double secondVariable=80.00d;
       double Total=(firstVariable + secondVariable) * 100.00d;
       System.out.println(" My Total is :  " +Total);
       Total%= 40.00d;
        System.out.println(" My Total after  Modulus :  " +Total);
        boolean isZero=false;
       isZero=(Total==0)? true :false;
        System.out.println(isZero);


                if (!isZero){

                  System.out.println(" Got some remainder your Remainder is : " + Total );
                            }


    }
