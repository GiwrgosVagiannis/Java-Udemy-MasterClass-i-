package com.company;
import java.util.Scanner;
import java.util.Arrays;
public class Main {
    private static Scanner scanner=new Scanner(System.in);
    public static void main(String[] args) {
        System.out.println("Give the Lengh of Array");
        int number=scanner.nextInt();


int[]myArray=(ArrayImportion( number));
        for(int i=0;i<myArray.length;i++){
            System.out.println("Your Number At Position " + (i+1) +" Was : "+ myArray[i]);
        }
        Arrays.sort(myArray);
        for(int i=0;i<myArray.length;i++){
            System.out.println("Your Number At Position " + (i+1) +" Was : "+ myArray[i]);
        }
        System.out.println(Arrays.toString(myArray));
    }
    public static int[] ArrayImportion(int number){
        int[]values=new int[number];
        for(int i=0;i<number;i++){
        System.out.println("Give me the " + (i+1));
        values[i]=scanner.nextInt();
    }
        return values;
}}

//reverse array


  public static void swapArray(int []reversearray){

                int Counter=reversearray.length;
                int temp=0;


                for(int i=0;i<(Counter/2);i++){
                    temp=reversearray[i];
                    reversearray[i]=reversearray[Counter-1];
                    reversearray[Counter-1]=temp;
                    Counter--;

                }
