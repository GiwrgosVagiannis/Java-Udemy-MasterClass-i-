package com.company;

import java.util.Scanner;

public class Main {
private static Scanner scanner=new Scanner(System.in);
    public static void main(String[] args) {
        System.out.println("Give me the number of values !");
        int number=scanner.nextInt();
    int []myArray=getIntegers(number);
for(int i=0;i<myArray.length;i++){
    System.out.println("Your Number At Position " + (i+1) +" Was : "+ myArray[i]);
}
System.out.println("The Sum was " + getSum(myArray));
System.out.println("And the MO was "+ (double)getSum(myArray)/myArray.length);
    }
    public static int[] getIntegers(int number){
        System.out.println("Give the Number " + number  +" Integer Values.\r");
        int[]values=new int[number];
        for(int i=0;i<number;i++){
            values[i]=scanner.nextInt();
        }
        return values;
    }
    public static int getSum(int myArray[]){
        int sum=0;
        for(int i=0;i<myArray.length;i++){
            sum=myArray[i]+sum;

        }
        return sum;
    }


}









